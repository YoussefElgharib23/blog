{% extends 'base.html.twig' %}

{% block title 'Show post ' ~ post.slug | capitalize %}

{% block body %}
    <style>
        .c-n-article {
            color: #fe4f4f;
            font-weight: 800;
        }
    </style>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <article class="mt-4">
                    <small><span class="c-n-article">{{ post.category.name }} </span>- {{ post.createdAt | date('M d, Y') }}</small>
                    <h2 class="font-weight-bolder">{{ post.title }}</h2>
                    <img class="mt-2 rounded w-100" src="{{ post.imageLink }}" alt="">
                    <div class="mt-3">
                        <p class="font-weight-bolder">
                            {{ post.description }}
                        </p>
                    </div>
                </article>
            </div>
            <div class="col-md-4">
                <div class="r-a" style="margin-top: 55px;">
                    <h2 class="text-center mb-2">Related article</h2>
                    <article class="d-flex flex-column align-items-center">
                        <img class="mw-100 w-75 rounded img-fluid" src="{{ relatedPost.imageLink }}" alt="">
                    <small class="text-muted"><span class="c-n-article">{{ post.category.name }}</span> - {{ post.createdAt | date('M d, Y') }}</small>
                        <h3 class="mt-2 text-center"><a href="{{ path('app_admin_post_show', {'id': relatedPost.id, 'slug': relatedPost.slug}) }}" class="link-c">{{ relatedPost.title }}</a></h3>
                    </article>
                </div>
            </div>
        </div>
    </div>
{% endblock %}