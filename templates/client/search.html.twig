{% extends 'base.html.twig' %}

{% block title 'Results for ' %}

{% block body %}
    <style>
        body {
            background-color: #f5f5f5 !important;
        }

        div.container, .container-fluid {
            background-color: white;
            border-left: 1px solid #e1e1e1;
            border-right: 1px solid #e1e1e1;
            border-top: 1px solid #e3e3e3;
        }
        footer.container {
            background-color: white;
            border-left: 1px solid #e1e1e1;
            border-right: 1px solid #e1e1e1;
        }
    </style>
    <div class="container mt-4">
        <h2 class="mb-4 pt-3">Results for <span class="text-muted">{{ category.name }}</span></h2>
        {# START DISPLAY THE RESULTS #}
        {% for row in posts | batch(4) %}
            <div class="row">
                {% for post in row %}
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <a href="{{ path('app_client_show_post', {'id': post.id, 'slug': post.slug}) }}" class="article-img-link">
                            <img class="rounded-lg img-fluid" src="{{ post.imageLink }}"  alt="">
                        </a>
                        <small>
                            <span class="cat">{{ post.category.name }}</span>
                        </small>
                        <h5 class="_font-25-sm">
                            <a href="{{ path('app_client_show_post', {'id': post.id, 'slug': post.slug}) }}" class="link-c">{{ post.title }}</a>
                        </h5>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-danger m-0">No posts founds !</div>
        {% endfor %}
        {# END DISPLAY THE RESULTS #}
    </div>

{% endblock %}