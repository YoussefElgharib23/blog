{% extends 'base.html.twig' %}

{% block title 'Results for ' ~ category.name %}

{% block body %}
    {{ include('client/shared/_style.html.twig') }}
    <div class="container mt-4">
        <h2 class="mb-4 pt-3">Results for <span class="text-muted">{{ category.name }}</span></h2>
        {# START DISPLAY THE RESULTS #}
        {% if posts | length > 0 %}
            <div class="row">
                {% for post in posts %}
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <a href="{{ path('app_client_show_post', {'id': post.id, 'slug': post.slug}) }}" class="article-img-link">
                            <img class="rounded-lg img-fluid" src="{{ post.imageLink }}"  alt="">
                        </a>
                        <small>
                            <span class="cat">{{ post.category.name }}</span>
                        </small>
                        <h5 class="_font-25-sm">
                            <a class="link-c"
                               href="{{ path('app_client_show_post', {'id': post.id, 'slug': post.slug}) }}">
                                {{ post.title }}
                            </a>
                        </h5>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-danger m-0">No posts founds !</div>
        {% endif %}
        {# END DISPLAY THE RESULTS #}
    </div>

{% endblock %}