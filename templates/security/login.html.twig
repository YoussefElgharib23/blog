{% extends 'base.html.twig' %}

{% block title 'Login to your account' %}

{% block body %}
    {{ include('client/_shared.html.twig') }}
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <form method="post">
                    <div class="mb-2 mt-5 text-center ">
                        <i class="fa fa-user fa-2x text-secondary"></i>
                        <h1 class="font-weight-normal">Login To Your Account</h1>
                        <p class="text-center text-secondary">There is many articles waiting you</p>
                    </div>
                    {% if error %}
                        <div class="mt-3 alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                               required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

                    <div class="form-group">
                        <input type="checkbox" id="remember_me" name="_remember_me">
                        <label class="form-check-label" for="remember_me"> Remember me</label>
                    </div>

                    <button class="btn btn-block btn-primary" type="submit">Login</button>
                </form>

                <p class="mt-4 text-center text-muted">Not have an account ? Try
                    <a href="{{ path('app_register') }}" class="text-decoration-none" style="color: #fe4f4f">sign up</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
